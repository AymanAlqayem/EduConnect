<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient android:angle="45" android:endColor="#FFC371" android:startColor="#FF5F6D" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient android:angle="45" android:endColor="#38F9D7" android:startColor="#43E97B" />
        </shape>
    </item>
</selector>
