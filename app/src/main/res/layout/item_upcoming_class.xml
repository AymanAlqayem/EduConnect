<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    style="@style/CardViewStyle"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/card_background">

        <!-- Colored Indicator Strip -->
        <View
            android:id="@+id/color_indicator"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@drawable/indicator_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Course Icon -->
        <LinearLayout
            android:id="@+id/icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/circle_background_teal"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/color_indicator"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_course_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_book_education"
                android:contentDescription="@string/course_icon_description"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- Course Name -->
        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="4dp"
            style="@style/CustomTextView"
            android:text="Advanced Mathematics"
            app:layout_constraintEnd_toStartOf="@id/time_container"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Time with Clock Icon -->
        <LinearLayout
            android:id="@+id/time_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_course_name">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_clock"
                android:contentDescription="@string/time_icon_description"
                android:layout_marginEnd="4dp"
                app:tint="@color/purple_500" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                style="@style/CustomTextView"
                android:text="10:00 - 11:00 AM" />
        </LinearLayout>

        <!-- Room with Location Icon -->
        <LinearLayout
            android:id="@+id/room_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/tv_course_name"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_location"
                android:contentDescription="@string/location_icon_description"
                android:layout_marginEnd="4dp"
                app:tint="@color/gray_700" />

            <TextView
                android:id="@+id/tv_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                style="@style/CustomTextView"
                android:text="Room 101 - New Building" />
        </LinearLayout>

        <!-- Day with Calendar Icon -->
        <LinearLayout
            android:id="@+id/day_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/room_container"
            app:layout_constraintTop_toBottomOf="@id/room_container">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_calendar"
                android:contentDescription="@string/calendar_icon_description"
                android:layout_marginEnd="4dp"
                app:tint="@color/gray_700" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray_700"
                style="@style/CustomTextView"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Monday - Week 1" />
        </LinearLayout>

        <!-- Students Count with People Icon -->
        <LinearLayout
            android:id="@+id/students_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/day_container"
            app:layout_constraintStart_toStartOf="@id/day_container">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_people"
                android:contentDescription="@string/students_icon_description"
                android:layout_marginEnd="4dp"
                app:tint="@color/gray_700" />

            <TextView
                android:id="@+id/tv_students_count"
                style="@style/CustomTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="25 Students"
                android:textColor="@color/gray_700"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
