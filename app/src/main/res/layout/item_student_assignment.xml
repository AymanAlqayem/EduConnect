<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="card_transition">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/iv_assignment_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_assignment"
            android:tint="#1E88E5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_assignment_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Assignment Title"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_assignment_icon"
            app:layout_constraintTop_toTopOf="@id/iv_assignment_icon" />

        <!-- Course -->
        <TextView
            android:id="@+id/tv_assignment_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Course"
            android:textColor="#757575"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            app:layout_constraintEnd_toEndOf="@id/tv_assignment_title"
            app:layout_constraintStart_toStartOf="@id/tv_assignment_title"
            app:layout_constraintTop_toBottomOf="@id/tv_assignment_title" />

        <!-- Due Date -->
        <TextView
            android:id="@+id/tv_assignment_due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Due Date"
            android:textColor="#757575"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            app:layout_constraintEnd_toEndOf="@id/tv_assignment_course"
            app:layout_constraintStart_toStartOf="@id/tv_assignment_course"
            app:layout_constraintTop_toBottomOf="@id/tv_assignment_course" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>