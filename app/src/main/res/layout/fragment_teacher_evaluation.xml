<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_blue"
    android:padding="22dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Assignment Title -->
    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Assignment Title"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subject -->
    <TextView
        android:id="@+id/tv_detail_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Subject: Mathematics"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Due Date -->
    <TextView
        android:id="@+id/tv_detail_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Due: 2025-06-20"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_subject"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Student Name -->
    <TextView
        android:id="@+id/tv_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Student: John Doe"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_due_date"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Class Name -->
    <TextView
        android:id="@+id/tv_detail_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Class: 10th"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@id/tv_students"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/tv_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description: Solve quadratic equations."
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_class"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Submission Section -->
    <TextView
        android:id="@+id/tv_submission_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Student Submission"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_description"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Submission Text -->
    <TextView
        android:id="@+id/submission_texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Submission: [Student's submitted text]"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_submission_label"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Submission File -->
    <TextView
        android:id="@+id/submission_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="File: None"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/submission_texts"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>