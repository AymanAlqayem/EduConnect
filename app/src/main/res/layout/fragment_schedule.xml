<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    style="@style/CardViewStyle"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/card_background">

        <!-- Colored Indicator Strip -->
        <View
            android:id="@+id/color_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/purple_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Course Icon -->
        <ImageView
            android:id="@+id/iv_course_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_course"
            android:contentDescription="@string/course_icon_description"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/color_indicator"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/teal_200" />

        <!-- Course Name -->
        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/CustomTextView"
            tools:text="Mathematics"
            app:layout_constraintEnd_toStartOf="@id/tv_time"
            app:layout_constraintStart_toEndOf="@id/iv_course_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Time -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            style="@style/CustomTextView"
            tools:text="10:00 AM - 11:00 AM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_course_name" />

        <!-- Room -->
        <TextView
            android:id="@+id/tv_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            style="@style/CustomTextView"
            tools:text="Room 101"
            app:layout_constraintStart_toStartOf="@id/tv_course_name"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name" />

        <!-- Day of Week -->
        <TextView
            android:id="@+id/tv_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/gray_700"
            style="@style/CustomTextView"
            tools:text="Monday"
            app:layout_constraintStart_toStartOf="@id/tv_room"
            app:layout_constraintTop_toBottomOf="@id/tv_room" />

        <!-- Action Button (e.g., Edit Schedule) -->
        <ImageButton
            android:id="@+id/btn_edit_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/edit_schedule_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/purple_500" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>