<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    style="@style/CardViewStyle"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/card_background">

        <!-- Course color indicator -->
        <View
            android:id="@+id/color_indicator"
            android:layout_width="6dp"
            android:layout_height="40dp"
            android:background="@color/teal_200"
            app:layout_constraintBottom_toBottomOf="@id/iv_course_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_course_icon"/>

        <!-- Course icon -->
        <ImageView
            android:id="@+id/iv_course_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_book_education"
            app:layout_constraintStart_toEndOf="@id/color_indicator"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Course name -->
        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Advanced Mathematics"
            app:layout_constraintEnd_toStartOf="@id/btn_view_grades"
            app:layout_constraintStart_toEndOf="@id/iv_course_icon"
            app:layout_constraintTop_toTopOf="@id/iv_course_icon"/>

        <!-- Course code -->
        <TextView
            android:id="@+id/tv_course_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="MATH-401"
            app:layout_constraintEnd_toEndOf="@id/tv_course_name"
            app:layout_constraintStart_toStartOf="@id/tv_course_name"
            app:layout_constraintTop_toBottomOf="@id/tv_course_name"/>

        <!-- View grades button (eye icon) -->
        <ImageButton
            android:id="@+id/btn_view_grades"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_eye"
            android:contentDescription="@string/view_grades"
            app:layout_constraintBottom_toBottomOf="@id/iv_course_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_course_icon"
            app:tint="@color/purple_500" />

        <!-- Progress bar showing overall grade -->
        <LinearLayout
            android:id="@+id/grade_progress_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_course_icon">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_grade"
                    android:textSize="14sp"
                    android:textColor="@color/gray_700"/>

                <TextView
                    android:id="@+id/tv_grade_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="85%"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_200"/>

                <TextView
                    android:id="@+id/tv_grade_letter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="(A)"
                    android:textSize="14sp"
                    android:textColor="@color/teal_200"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_grade"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:progress="85"
                android:progressTint="@color/teal_200"
                android:secondaryProgressTint="@color/teal_200"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>