<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6200EE"
        android:title="Message Details"
        android:titleTextColor="#FFFFFF"
        android:titleTextAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:elevation="4dp" />

    <!-- CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#BBDEFB">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_detail_sender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textColor="#212121"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_detail_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10:30 AM, May 30"
                android:textColor="#424242"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tv_detail_sender"
                app:layout_constraintEnd_toEndOf="@id/tv_detail_sender"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_sender" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#90CAF9"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_timestamp" />

            <TextView
                android:id="@+id/tv_detail_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="This is the full message content..."
                android:textColor="#212121"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="6dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
