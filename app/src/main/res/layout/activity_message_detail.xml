<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_background_blue"
    tools:context=".MessageDetailActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="4dp"
        android:titleTextColor="@android:color/white"
        app:title="Message Details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Message Icon -->
            <ImageView
                android:id="@+id/iv_assignment_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_messages"
                android:tint="@color/primary_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseAppTint" />

            <!-- Sender Name -->
            <TextView
                android:id="@+id/tv_detail_sender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/iv_assignment_icon"
                app:layout_constraintTop_toTopOf="@id/iv_assignment_icon"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Message Subject -->
            <TextView
                android:id="@+id/tv_detail_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="This is the full message content..."
                android:textColor="#424242"
                android:textSize="16sp"
                android:maxLines="5"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_detail_sender"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_sender" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/tv_detail_timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="10:30 AM, May 30"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_subject"
                app:layout_constraintStart_toStartOf="@id/tv_detail_subject"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
