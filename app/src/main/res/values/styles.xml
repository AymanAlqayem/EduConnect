<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme -->
    <style name="ourAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Global attributes -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="checkboxStyle">@style/CustomCheckBox</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="radioButtonStyle">@style/CustomRadioButton</item>
        <item name="spinnerStyle">@style/CustomSpinner</item>
        <item name="toolbarStyle">@style/CustomMaterialToolbar</item>
    </style>

    <style name="CustomLinearLayout" parent="android:Widget">
        <item name="android:background">#FFF7E6</item>
    </style>

    <!-- Custom EditText -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#666666</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:backgroundTint">#FFE082</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- Custom TextView -->
    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Custom Toolbar Style -->
    <style name="CustomMaterialToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="titleCentered">true</item>
    </style>


    <!-- Custom ListView -->
    <style name="CustomListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">#FFCC80</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">#FFF7E6</item>
        <item name="android:listSelector">?android:attr/activatedBackgroundIndicator</item>
    </style>


    <!-- Custom CheckBox -->
    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:buttonTint">#A7FFEB</item>
    </style>

    <!-- Custom RadioButton -->
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:buttonTint">#A7FFEB</item>
    </style>

    <!-- Custom AlertDialog -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">#333333</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:background">#FFF7E6</item>
    </style>

    <!-- Custom Spinner -->
    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">#FFE082</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">12dp</item>
    </style>


</resources>